<div class="mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
  <h1 class="font-bold text-4xl mb-6 text-gray-800">Users</h1>
  <table class="w-full">
    <thead>
      <tr class="bg-gray-100">
        <th class="px-4 py-2 text-left">Email</th>
        <th class="px-4 py-2 text-left">Link Count</th>
        <th class="px-4 py-2 text-left">Comment Count</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do | user, index | %>
        <tr class="border-b  <%= index.even? ? 'bg-gray-100' : 'bg-white' %>">
          <td class="px-4 py-2"><%= link_to user.email, user_path(user), class: "text-gray-700 hover:text-indigo-500" %></td>
          <td class="px-4 py-2"><%= user.links.count %></td>
          <td class="px-4 py-2"><%= user.comments.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
