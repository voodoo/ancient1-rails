
    <%= link_to link_path(link), class: "block" do %>
        <div id="link_<%= link.id %>" class="p-4 bg-white shadow rounded-lg flex items-center hover:bg-gray-50 transition duration-150 ease-in-out">
            <div class="flex flex-col items-center mr-4">
                <p class="text-gray-700 flex flex-col items-center"><%= link.score %> </p>
            </div>
            <div>
                <h2 class="text-xl font-semibold"><%= link.title %></h2>
                <p class="text-gray-500"><%= link.url %></p>
                <p class="text-gray-400 text-sm">Submitted by <%= link.user.email %></p>
            </div>
        </div>
    <% end %>
