<div class="mx-auto py-12 px-4 sm:px-6 lg:px-8">
  <h1 class="text-4xl font-extrabold text-gray-900 mb-10 text-center">Submit a New Link</h1>

  <%= form_with(model: @link, local: true, class: "space-y-8") do |f| %>
    <% if @link.errors.any? %>
      <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-md" role="alert">
        <div class="flex items-center">
          <svg class="h-6 w-6 text-red-500 mr-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div>
            <h2 class="text-lg font-semibold">
              <%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:
            </h2>
            <ul class="mt-2 list-disc list-inside">
              <% @link.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div class="space-y-6 bg-white p-6 rounded-lg">
      <div>
        <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :title, required: true, class: "mt-1 block w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition duration-150 ease-in-out" %>
      </div>

      <div>
        <%= f.label :url, class: "block text-sm font-medium text-gray-700" %>
        <%= f.url_field :url, required: true, class: "mt-1 block w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition duration-150 ease-in-out" %>
      </div>

      <div>
        <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :description, rows: 4, class: "mt-1 block w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition duration-150 ease-in-out" %>
      </div>


    <div class="pt-6">
      <%= f.submit "Submit Link", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out transform hover:-translate-y-1 hover:scale-105" %>
    </div>
    </div>    
  <% end %>
</div>