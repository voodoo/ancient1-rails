<div id="link_<%= @link.id %>" class="p-4 bg-white shadow rounded-lg flex items-center">
  <div class="flex flex-col items-center mr-4">
    <%= button_to '+', upvote_link_path(@link), method: :post, data: { turbo_stream: true }, class: "text-black text-lg" %>
    <p class="text-gray-700"><%= @link.score %></p>
    <%= button_to '-', downvote_link_path(@link), method: :post, data: { turbo_stream: true }, class: "text-black text-lg" %>
  </div>
  <div>
    <h2 class="text-xl font-semibold"><%= link_to @link.title, @link.url, class: "text-black" %></h2>
    <p class="text-gray-500"><%= @link.url %></p>
    <p class="text-gray-500">Submitted by <%= @link.user.email %></p>
  </div>

</div>