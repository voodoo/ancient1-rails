<div class="container mx-auto px-4 py-8">
  <div class="bg-white shadow-md rounded-lg p-6">
    <h1 class="text-3xl font-bold mb-4">
        <%= link_to @link.title, @link.url, target: "_blank", rel: "noopener noreferrer", class: "text-blue-600 hover:text-blue-800" %>

    </h1>
    <p class="text-gray-600 mb-4"><%= @link.description %></p>
    <div class="text-sm text-gray-500 mb-4">
      Submitted by <%= @link.user.email %> | <%= time_ago_in_words(@link.created_at) %> ago
    </div>
    <%= link_to 'Back to Links', links_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>
</div>
