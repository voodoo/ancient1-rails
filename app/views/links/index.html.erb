<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Latest Links</h1>

  <% unless logged_in? %>
    <div class="mb-6 bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4" role="alert">
      <p>Please <%= link_to "log in", login_path, class: "underline" %> to submit new links.</p>
    </div>
  <% end %>

  <div class="space-y-4">
    <% @links.each do |link| %>
      <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-2">
          <%= link_to link.title, link_path(link), class: "text-blue-600 hover:text-blue-800" %>
        </h2>
        <p class="text-gray-600 mb-2"><%= link.description %></p>
        <div class="text-sm text-gray-500">
          Submitted by <%= link.user.email %> | <%= time_ago_in_words(link.created_at) %> ago
        </div>
      </div>
    <% end %>
  </div>

  <% if @links.empty? %>
    <p class="text-gray-600 text-center mt-8">No links have been submitted yet.</p>
  <% end %>
</div>
