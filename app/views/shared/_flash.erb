<% flash.each do |type, message| %>
  <% flash_class = type == 'notice' ? 'bg-green-100 border-green-400 text-green-700' : 'bg-red-100 border-red-400 text-red-700' %>
  <div class="<%= flash_class %> bg-green border px-4 py-3 rounded relative mb-4" role="alert">
    <%= message %>
  </div>
<% end %>
