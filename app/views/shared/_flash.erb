      <% flash.each do |type, message| %>
        <div class="<%= type == 'notice' ? 'bg-green-100 border-green-400 text-green-700' : 'bg-red-100 text-red-700' %> border px-4 py-3 rounded relative mb-4" role="alert">
          <span class="block sm:inline"><%= message %></span>
        </div>
      <% end %>